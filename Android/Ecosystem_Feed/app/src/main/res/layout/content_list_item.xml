<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/content_list_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/content_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ef_app_send_show_posts1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/region_ecosystem_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Canada/Human Resources"
                    android:textSize="20sp"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/nunito_extralight"/>
                <TextView
                    android:id="@+id/category_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Talent Management"
                    android:textSize="20sp"
                    android:textColor="@color/blueText"
                    android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Content"
                    android:textSize="20sp"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingHorizontal="10dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_delete_ly"
                    android:visibility="visible">
                    <Button
                        android:id="@+id/content_delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttonshape_white_rounded"
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="8dp"
                        android:text="DELETE"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>