<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentDetails">

    <RelativeLayout
        android:id="@+id/content_details_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/content_details_header_region_cat_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/black_text"
            android:text="Category"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/cantent_details_header_subcategory_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/blueText"
            android:text="SubCategory"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"/>
        <ImageButton
            android:id="@+id/content_details_close_ibtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_close_black_24dp"
            android:background="@color/white_transparent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/content_details_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/content_details_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:divider="@drawable/divider"
                android:showDividers="middle">
                <TextView
                    android:id="@+id/content_details_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/nunito_semibold"/>
                <TextView
                    android:id="@+id/content_details_detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/nunito_extralight"/>
                <Button
                    android:id="@+id/content_details_linkedin_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SHARE ON LINKEDIN"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_bold"
                    android:background="@drawable/roundedblue_buttonbackground"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/content_details_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/black_text"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/content_details_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days ago"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/content_details_user_profile_iv"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:adjustViewBounds="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Link"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:id="@+id/content_details_share_link_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Link"
                    android:fontFamily="@font/nunito_extralight"
                    android:textColor="@color/blueText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resource Link"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/black_text"/>
                <TextView
                    android:id="@+id/content_details_resource_link_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Link"
                    android:fontFamily="@font/nunito_extralight"
                    android:textColor="@color/blueText" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>